{
  "name": "perf",
  "description": "Презентация: «Семь раз отмерь, один раз оптимизируй»",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/d-rusakov-wp/perf",
  "scripts": {
    "dev": "shower serve & npm run tw:watch",
    "bundle": "npm run tw:bundle",
    "publish": "npm run bundle & shower publish --files '**' --files '!{docs,node_modules}{,/**}' --files '!*.{md,toml,json,yml,lockb,config.js,config.ts}'",
    "tw:watch": "tailwindcss -i ./themes/tw/styles/main.css -o ./bundled/main.css --watch",
    "tw:bundle": "tailwindcss -i ./themes/tw/styles/main.css -o ./bundled/main.css --minify"
  },
  "dependencies": {
    "@shower/core": "^3.3.0",
    "@shower/material": "^2.5.1",
    "@shower/ribbon": "3.5.2",
    "lottie-web": "5.12.2",
    "tailwindcss-motion": "0.3.0-beta"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@shower/cli": "^0.3.1",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "lefthook": "1.8.2",
    "path-exists-cli": "2.0.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "0.6.8",
    "sd-tailwindcss-transformer": "2.0.0",
    "tailwindcss": "3.4.14"
  },
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "engines": {
    "node": ">= 18",
    "npm": ">= 9",
    "yarn": "Please use npm instead of yarn to install dependencies",
    "pnpm": "Please use npm instead of pnpm to install dependencies"
  },
  "files": [
    "build",
    "index.html",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/d-rusakov-wp/perf.git"
  },
  "sideEffects": [
    "*.css"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
